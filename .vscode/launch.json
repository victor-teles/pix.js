{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch api",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev:api"],
      "cwd": "${workspaceFolder}/apps/basic",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch worker",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev:publisher"],
      "cwd": "${workspaceFolder}/apps/basic",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
